<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/config_feed_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!--android:layout_marginTop="20dp"-->
    <!--android:layout_marginBottom="20dp"-->
    <!--android:background="?attr/root_view_bg"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feed_name_title"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:text="名称" />

        <EditText
            android:id="@+id/feed_name_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            tools:text="这里是只允许显示单行的长标题"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/feed_link_title"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="源地址" />

        <TextView
            android:id="@+id/feed_link"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            tools:text="http://blog.wizos.me/feed"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="?android:selectableItemBackground"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feed_open_mode_title"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="默认显示" />

        <TextView
            android:id="@+id/feed_open_mode_select"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="RSS"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feed_tag_title"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:text="分组" />

        <TextView
            android:id="@+id/feed_tag_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            tools:text="博谈"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="?android:selectableItemBackground"
            android:drawableRight="@drawable/ic_arrow_right"
            android:clickable="true" />

    </LinearLayout>


</LinearLayout>