<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.zhanghai.android.materialedittext.MaterialTextInputLayout
        android:id="@+id/search_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        app:errorEnabled="true">

        <me.zhanghai.android.materialedittext.MaterialEditText
            android:id="@+id/search_dialog_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_key"
            android:inputType="text"
            android:maxLines="1" />
    </me.zhanghai.android.materialedittext.MaterialTextInputLayout>
</RelativeLayout>