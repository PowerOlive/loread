    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/root_view_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/feed_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <me.wizos.loread.view.IconFontView
                android:id="@+id/feed_config_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:gravity="center"
                android:text="@string/font_feed_config"
                android:textColor="?attr/icon_title_color" />

            <TextView
                android:id="@+id/feed_config_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="?attr/icon_title_color"
                android:text="@string/feed_config" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <me.wizos.loread.view.IconFontView
                android:id="@+id/open_link_by_browser_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:gravity="center"
                android:text="@string/font_open_link_by_browser"
                android:textColor="?attr/icon_title_color" />

            <TextView
                android:id="@+id/open_link_by_browser_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="?attr/icon_title_color"
                android:text="@string/open_link_by_browser" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <me.wizos.loread.view.IconFontView
                android:id="@+id/get_readability_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="24sp"
                android:gravity="center"
                android:text="@string/font_get_readability"
                android:textColor="?attr/icon_title_color" />

            <TextView
                android:id="@+id/get_readability_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="?attr/icon_title_color"
                android:text="@string/get_readability" />
        </LinearLayout>

    </LinearLayout>


