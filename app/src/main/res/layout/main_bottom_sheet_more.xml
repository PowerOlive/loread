    <LinearLayout style="@style/SettingItem">

        <TextView
            android:id="@+id/article_list_state_title"
            style="@style/BottomSheetItemTitle"
            android:text="@string/article_list_state" />

        <RadioGroup
            android:id="@+id/article_list_state_radio_group"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <RadioButton
                android:checked="false"
                android:id="@+id/radio_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="12sp"
                android:text="@string/all"
                android:button="@null"
                android:textColor="@drawable/selector_corners_bg"
                android:background="@drawable/corners_bg_uncheck" />

            <RadioButton
                android:id="@+id/radio_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="10dp"
                android:checked="true"
                android:text="@string/unread"
                android:textSize="12sp"
                android:button="@null"
                android:textColor="@drawable/selector_corners_bg"
                android:background="@drawable/corners_bg_uncheck" />

            <RadioButton
                android:checked="false"
                android:id="@+id/radio_starred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="10dp"
                android:text="@string/starred"
                android:textSize="12sp"
                android:button="@null"
                android:textColor="@drawable/selector_corners_bg"
                android:background="@drawable/corners_bg_uncheck" />
        </RadioGroup>
    </LinearLayout>


