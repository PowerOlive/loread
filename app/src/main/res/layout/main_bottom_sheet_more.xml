<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_view_bg"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/more_setting"
        style="@style/SettingItem">

        <TextView
            android:id="@+id/more_setting_title"
            style="@style/BottomSheetItemTitle"
            android:text="@string/more_setting" />

        <me.wizos.loread.view.IconFontView
            android:id="@+id/more_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:textColor="?attr/lv_item_title_color"
            android:text="@string/font_arrow_right" />
    </LinearLayout>

    <LinearLayout style="@style/SettingItem">

        <TextView
            android:id="@+id/auto_mark_when_scrolling_title"
            style="@style/BottomSheetItemTitle"
            android:text="@string/auto_mark_when_scrolling" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/auto_mark_when_scrolling_switch"
            style="@style/SwitchButtonStyle" />
    </LinearLayout>

    <LinearLayout style="@style/SettingItem">

        <TextView
            android:id="@+id/down_img_on_wifi_title"
            style="@style/BottomSheetItemTitle"
            android:text="@string/down_img_on_wifi" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/down_img_on_wifi_switch"
            style="@style/SwitchButtonStyle" />
    </LinearLayout>


    <LinearLayout style="@style/SettingItem">

        <TextView
            android:id="@+id/night_theme_title"
            style="@style/BottomSheetItemTitle"
            android:text="@string/night_theme" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/night_theme_switch"
            style="@style/SwitchButtonStyle" />
    </LinearLayout>

